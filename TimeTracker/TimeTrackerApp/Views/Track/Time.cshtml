@using TimeTrackerApp.Models

@model TrackedTimeViewModel

@{
    ViewBag.Title = "Track time";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Time", "Track", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h4>Please submit information about a time registration.</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Date, new { @class = "col-md-4 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(model => model.Date, new { @class = "form-control datepicker", data_date_format = "dd/mm/yyyy", data_date_end_date = "0d", data_date_autoclose = true, @readonly = "", placeholder = "Please click to select a date" })                   
                    @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Hours, new { @class = "col-md-4 control-label" })
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.Hours, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Hours, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-4 control-label" })
                <div class="col-md-5">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-7 col-md-6">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker();
        });
    </script>
}